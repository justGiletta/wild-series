{% extends 'base.html.twig' %}

{% block title %}
	Wild Series
{% endblock %}

{% block body %}
	<a href="{{ path('program_season_show', { 'programSlug': program.slug , 'seasonId': season.id }) }}">
		Retour Ã  la liste des programmes
	</a>
	<div class="media mt-5">
		<div class="media-body">
			<h1 class="mt-0">{{ program.title }}</h1>
		</div>
		<div class="media-body">
			<h5 class="mt-5">SAISON
				{{ season.number }}</h5>
			<h4>Episode {{ episode.number }} : {{episode.title}}</h4>
			<p>Synopsis :
				{{ episode.synopsis }}</p>
		</div>
	</div>
	<div class="mt-5">
		<h1 class="mb-4">Vos commentaires</h1>
	</div>
		{% for comment in episode.comments %}
	<div class="card mt-3 p-4">
		<h4 class"mt-5">{{comment.author.username}}</h4>
		<p>{{comment.comment}}</p>
		<p>RATE : {{comment.rate}}</p>
		{% if is_granted("ROLE_ADMIN") or app.user == comment.author %}
        	{{ include('comment/_delete_form.html.twig') }}
		{% endif %}
	</div>
		{% endfor %}

	{% if app.user %}
	<h5 class="mt-5">Create new Comment</h5>
        {{ include('comment/_form.html.twig') }}
	{% endif %}

{% endblock %}
