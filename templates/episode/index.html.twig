{% extends 'base.html.twig' %}

{% block title %}Episode index{% endblock %}

{% block body %}
    <h1>EPISODES INDEX</h1>
    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
		<p class="btn btn-outline-dark">
			<a href="{{ path('episode_new') }}">Ajouter un épisode</a>
		</p>
	</div>
    <table class="table">
        <thead>
            <tr>
                <th>Série</th>
                <th>Title</th>
                <th>Number</th>
                <th>Synopsis</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for episode in episodes %}
            <tr>
                <td><h6>{{ episode.season.program.title }}</h6></td>
                <td>{{ episode.title }}</td>
                <td>{{ episode.number }}</td>
                <td>{{ episode.synopsis }}</td>
                <td>
                    <div class="mt-2 p-2 btn btn-outline-dark text-center"><a href="{{ path('episode_show', {'id': episode.id}) }}">show</a></div>
                    <div class="mt-2 p-2 btn btn-outline-dark text-center"><a href="{{ path('episode_edit', {'id': episode.id}) }}">edit</a></div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
