{% extends 'base.html.twig' %}

{% block title %}Wild Series
{% endblock %}

{% block body %}

	<div class="container-fluid">
		<h1 class="my-5">{{ 'index.title'|trans }}</h1>
		<div class="row row-cols-1 row-cols-md-3 g-4">
			{% for program in programs | reverse |slice(0, 3) %}
				<div class="col">
					<div class="card">
						<img class="card-img-top" src="{{program.poster}}" alt="{{ program.title }} poster">
						<div class="card-body">
							<h3 class="card-title">{{ loop.index }}/
								{{ program.title }}</h3>
							<p class="card-text">{{ program.summary }}</p>
							<div class="card-text mb-3">
								<small class="text-muted">Cat√©gorie :
									{{ program.category.name }}</small>
							</div>
							<div class="d-grid gap-2 d-md-flex justify-content-md-end">
								<p class="btn btn-outline-dark">
									<a href="{{ path("program_show", { slug: program.slug }) }}">{{ 'index.button_see'|trans }}</a>
								</p>
							</div>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}

