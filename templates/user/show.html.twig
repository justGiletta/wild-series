{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
<div class="container">
    <h1 class="my-5">MON PROFIL</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>Bio</th>
                <td>{{ user.bio }}</td>
            </tr>
        </tbody>
    </table>

    <p class="btn btn-outline-dark"><a href="{{ path('user_edit', {'id': user.id}) }}">Edit</a></p>

    {{ include('user/_delete_form.html.twig') }}

</div>
{% endblock %}
