{% extends 'base.html.twig' %}

{% block title %} Categories {% endblock %}

{% block body %}
<h1>Toutes les catégories de séries : </h1>
    {% for category in categories %}
        <div>
            <h2>{{ loop.index }} / <a href="{{ path("category_show", { categoryName: category.name }) }}">{{ category.name }}</a></h2>
        </div>
    {% else %}
        Aucune série trouvée.
    {% endfor %}

    <a href="{{ path('app_index') }}">
        Retour à l'accueil
    </a>
{% endblock %}